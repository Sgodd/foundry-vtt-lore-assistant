{
    "name": "foundry-vtt-lore-assistant",
    "version": "0.1.0",
    "description": "An intelligent lore assistant for Foundry VTT that helps players and GMs with world-building and storytelling using AI",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && rollup -c",
        "build:prod": "rm -rf dist && NODE_ENV=production rollup -c",
        "watch": "rollup -c -w",
        "dev": "rollup -c -w",
        "clean": "rm -rf dist",
        "lint": "tsc --noEmit"
    },
    "keywords": [
        "foundry-vtt",
        "foundry",
        "module",
        "ai",
        "lore",
        "assistant",
        "openai",
        "worldbuilding",
        "rpg",
        "tabletop"
    ],
    "author": "Sgodd",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sgodd/foundry-vtt-lore-assistant.git"
    },
    "bugs": {
        "url": "https://github.com/sgodd/foundry-vtt-lore-assistant/issues"
    },
    "homepage": "https://github.com/sgodd/foundry-vtt-lore-assistant#readme",
    "devDependencies": {
        "@league-of-foundry-developers/foundry-vtt-types": "^13.340.1",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "^24.0.1",
        "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
        "rollup": "^4.43.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-obfuscator": "^1.1.0",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "openai": "^5.3.0"
    }
}